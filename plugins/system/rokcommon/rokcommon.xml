	<description>RokCommon System Plugin</description>
	<files>
		<filename plugin="rokcommon">rokcommon.php</filename>
        <folder>lib</folder>
        <folder>language</folder>
        <folder>sql</folder>
	</files>
    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
