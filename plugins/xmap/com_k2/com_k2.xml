<?xml version="1.0" encoding="UTF-8"?>
<extension type="plugin" group="xmap" version="1.6">
    <name>Xmap - K2 Plugin</name>
    <author>Martin Herbst</author>
    <creationDate>November 2011</creationDate>
    <copyright>GNU GPL</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>webmaster@mherbst.de</authorEmail>
    <authorUrl>www.mherbst.de</authorUrl>
    <version>1.07</version>
    <description>Plugin for K2 component Version 1.06</description>
        <files>
            <filename plugin="com_k2">com_k2.php</filename>
        </files>
		
	<config>	
	
        <fields name="params">
		<fieldset name="basic">
			<field name="subcategories" type="list" default="no" label="Follow Subcategories" description="Add articles from subcategories">
				<option value="yes">Yes</option>
				<option value="no">No</option>
			</field>
			<field name="suppressdups" type="list" default="no" label="Supress Duplicates" description="Suppress duplicate K2 categories and items">
				<option value="yes">Yes</option>
				<option value="no">No</option>
			</field>
			<field name="showk2items" type="list" default="always" label="Show K2 Items" description="Show K2 items in site map">
				<option value="never">Never</option>
				<option value="always">Always</option>
				<option value="xml">In XML Sitemap only</option>
				<option value="html">In HTML Sitemap only</option>
			</field>			
			<field name="@spacer" type="spacer" default="" label="XML Sitemap" description="Options for the XML sitemap only" />
			<field name="priority" type="list" default="0.5" label="Priority" description="Set the priority">
				<option value="-1">Use Parent Menu Settings</option>
				<option value="0.0">0.0</option>
				<option value="0.1">0.1</option>
				<option value="0.2">0.2</option>
				<option value="0.3">0.3</option>
				<option value="0.4">0.4</option>
				<option value="0.5">0.5</option>
				<option value="0.6">0.6</option>
				<option value="0.7">0.7</option>
				<option value="0.8">0.8</option>
				<option value="0.9">0.9</option>
				<option value="1">1</option>
			</field>
			<field name="changefreq" type="list" default="weekly" label="Change frequency" description="Set the change frequency">
				<option value="-1">Use Parent Menu Settings</option>
				<option value="always">Always</option>
				<option value="hourly">Hourly</option>
				<option value="daily">Daily</option>
				<option value="weekly">Weekly</option>
				<option value="monthly">Monthly</option>
				<option value="yearly">Yearly</option>
				<option value="never">Never</option>
			</field>
			 </fieldset>
        </fields>
	</config>
</extension>